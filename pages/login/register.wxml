<view class="panel form">
  <view class="title">会员注册</view>
  <input value="{{username}}" placeholder="账号" bindchange="model"
    bindfocus="focus" bindblur="blur" class="{{focus == '1' ? 'active' : ''}}" data-active="1"/>
  <input type="password" value="{{password}}" placeholder="密码" bindchange="model" data-model="password"
    bindfocus="focus" bindblur="blur" class="{{focus == '2' ? 'active' : ''}}" data-active="2"/>
  <input value="{{randCode}}" placeholder="验证码" bindchange="model"
    bindfocus="focus" bindblur="blur" class="{{focus == '3' ? 'active' : ''}}" data-active="3" style="width:150px;float:left;margin-right:20px"/>

  <image src="http://www.jihui88.com/{{veriImg}}" mode="widthFix" bindtap="verifyPic" style="width:85px"/>
  <view class="tip" bindtap="back">返回登录</view>
  <button class="btn-primary fullwidth" bindtap="submit">确定</button>
</view>
